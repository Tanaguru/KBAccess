                <value>testcase-add-pages-I18N</value>
                <value>general-I18N</value>
                <value>reference-I18N</value>
                <value>home-page-I18N</value>
                <value>legal-page-I18N</value>
                <value>contact-page-I18N</value>
                <value>error-page-I18N</value>
