<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:forEach var="referenceTest" items="${referenceTestList}">
    <c:choose>
         <%-- If we're editing an existing testcase --%>
        <c:when test="${testcase != null}">                   
            <c:choose>
                <%-- We select its test --%>
                <c:when test="${testcase.testLabel == referenceTest.label}">
                    <option value="${referenceTest.id}" selected="selected">${referenceTest.label}</option>
                </c:when>
                <c:otherwise>
                    <option value="${referenceTest.id}">${referenceTest.label}</option>
                </c:otherwise>
            </c:choose> 
        </c:when>

        <%-- Else we're addind a new testcase --%>
        <c:otherwise>
            <option value="${referenceTest.id}">${referenceTest.label}</option>
        </c:otherwise>
    </c:choose>
</c:forEach>
